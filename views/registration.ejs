<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gandhigiri</title>
    <link rel="stylesheet" href="registration.css">
</head>
<body>
    <nav class="navbar">
        <div class="left-nav">
            <h2>Gandhigiri</h2>
        </div>
        <ul>
            <li><a href="#">Home</a></li>
            <li><a href="#">About</a></li>
            <li><a href="#">Services</a></li>
            <li><a href="#">Contact</a></li>
        </ul>
    </nav>
    <div class="form-container">
        <h2>Registration Form</h2>
        <form action="/register" method="POST">
            <!-- Name -->
            <label for="name">Name:</label>
            <input type="text" id="name" name="name" required>

            <!-- Roll No -->
            <label for="roll">Roll No:</label>
            <input type="text" id="roll" name="roll_no" required>

            <!-- College Email ID -->
            <label for="email">College Email ID:</label>
            <input type="email" id="email" name="college_email_id" required>

            <!-- Phone No -->
            <label for="phone">Phone No:</label>
            <input type="tel" id="phone" name="phone_no" required>

            <!-- Project Name -->
            <label for="project-name">Project Name:</label>
            <input type="text" id="project-name" name="project_name" required>

            <!-- Team Members Name -->
            <label for="team-members">Team Members Name:</label>
            <textarea id="team-members" name="team_member_name" rows="3" required></textarea>

            <!-- Team Leader Name -->
            <label for="team-leader">Team Leader Name:</label>
            <input type="text" id="team-leader" name="team_leader_name" required>

            <!-- Project Field -->
            <label for="project-field">Project Field:</label>
            <select id="project-field" name="project_field" required>
                <option value="software">Software</option>
                <option value="hardware">Hardware</option>
            </select>

            <!-- Course -->
            <label for="course">Course:</label>
            <input type="text" id="course" name="course" required>

            <!-- Specialization -->
            <label for="specialization">Specialization:</label>
            <select id="specialization" name="specialization" required>
                <option value="cse">CSE</option>
                <option value="it">IT</option>
                <option value="ee">EE</option>
                <option value="me">ME</option>
                <option value="ce">CE</option>
                <option value="aiml">AIML</option>
                <option value="ds">DS</option>
                <option value="ec">EC</option>
            </select>

            <!-- Submit Button -->
            <button type="submit">Submit</button>
        </form>
    </div>

</body>
</html>